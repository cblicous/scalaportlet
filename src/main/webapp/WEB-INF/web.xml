<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         id="scala-spring-hibernate"
         version="2.5">

		<display-name>SamplePortlet</display-name>
		<context-param> 
				<param-name>contextPath</param-name>
				<param-value>ScalaPortlet</param-value>
		</context-param>
		<servlet> 
				<servlet-name>ScalaPortlet</servlet-name>
				<servlet-class>org.apache.pluto.core.PortletServlet</servlet-class>
		<init-param> 
			<param-name>portlet-name</param-name> 
			<param-value>ScalaPortlet</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
		</servlet>
		<servlet-mapping>
			<servlet-name>SamplePortlet</servlet-name>
			<url-pattern>/PlutoInvoker/SamplePortlet</url-pattern>
		</servlet-mapping>
		<security-role>
		<role-name>tomcat</role-name>
	</security-role>
</web-app>